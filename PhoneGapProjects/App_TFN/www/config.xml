	<!-- cordova-plugin-wkwebview-engine support -->
	<platform name = "ios">
	
	<plugin name="cordova-plugin-alpha-wkwebview-file-xhr" spec="https://github.com/remoorejr/cordova-plugin-alpha-wkwebview-file-xhr.git" source="git" />
	
	<!-- this preference requires cordova-ios release 5.1.1, compliled code will not reference UIWebView -->
	<!-- Note: PhoneGap Build CLI-9.0.0 uses cordova-ios release 5.0.1, this preference is ignored by cordova-ios release 5.0.1 -->
	<preference name="WKWebViewOnly" value="true" />
	
	<feature name="CDVWKWebViewEngine">
  		<param name="ios-package" value="CDVWKWebViewEngine" />
	</feature>
	
	<preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
	
	<!--wkwebview-file-xhr options -->
	<preference name="InterceptRemoteRequests" value="all" />
	<preference name="NoS3Intercepts" value="true" />
	
	<!-- for Instant Update Support -->
	<allow-navigation href="*" />
	
	</platform>
	<!-- end cordova-plugin-wkwebview-engine support -->

